# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 140

# Applies only to JSON files
[{*.js, *.json, *.yaml, *.yml}]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Guidelines from https://sass-guidelin.es/#syntax--formatting
#            and https://cssguidelin.es/#syntax-and-formatting
[{*.sass, *.css}]
indent_size = 2
max_line_length = 80

